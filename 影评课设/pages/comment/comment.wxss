.top{
  width:90%;
  height:350rpx;
  display: flex;
  flex-direction: row;
}
.user{
  float:right;
  font-size: 36rpx;
  margin-right: 4rpx;
}
.film-icon{
  margin-top:15rpx;
  width:30%;
  height: 300rpx;
}
.film-mesg{
  width: 70%;
  height: 300rpx;
  margin: 15rpx 0 0 20rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.filmname{
  font-size: 45rpx;
}
.actor{
  margin-top: 20rpx;
  font-size: 30rpx;
}
.like{
  width: 230rpx;
  height: 80rpx;
  border: 1px solid green;
  border-radius: 13rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  position: absolute;
  bottom: 0rpx;
  left:120rpx;
  background-color: #51ec7e;
  padding:0 0 6rpx 0;
}
.brief-mesg{
  width: 90%;
  height:auto;
}
.brief-title{
   font-size: 36rpx;
   font-weight: bold;
}
.brief{
  margin-top:15rpx;
  text-indent: 46rpx;
  font-size: 28rpx;
}
.addcomment{
  width: 90%;
  margin-top:30rpx;
}
.comment-title{
  font-size: 40rpx;
  margin-bottom: 10rpx;
  font-weight: bolder;
}
.comment{
  width: 100%;
  height:360rpx;
  margin-top:10rpx;
  border:1px solid black;
  margin:0 auto;
  font-size: 35rpx;
  padding:55rpx 25rpx 5rpx 25rpx;
  box-sizing: border-box;
  position: relative;
}
.placeholder{
  font-size: 50rpx;
  color:#55af6f;
}
.currentcount{
  position: absolute;
  right:20rpx;
  top:10rpx;
}
.submit{
  width: 220rpx;
  height:90rpx;
  border-radius: 20rpx;
  font-size: 45rpx;
  font-weight: bolder;
  text-align: center;
  line-height: 90rpx;
  background-color: #51ec7e;
  margin-top: 20rpx;
}
.allcomments{
  width: 90%;
  height: auto;
  margin-bottom: 30rpx;
}
.item-comment{
  width: 100%;
  height: auto;
}
.comments{
  width: 100%;
  margin:20rpx 0;
  font-size: 32rpx;
  background-color: #e1f4e6;
  word-wrap: break-word;
}